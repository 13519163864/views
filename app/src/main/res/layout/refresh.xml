<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#dac9c9"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/liner_freash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="true"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/img_menu_adapter_icon_freash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/txt_menu_adapter_title_freash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:text="title"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/txt_menu_adapter_summary_freash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="neirong"
                android:textColor="#262226"
                android:textSize="18sp"
                />

            <!--</HorizontalScrollView>-->

            <TextView
                android:id="@+id/txt_menu_adapter_stamp_freash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:maxLines="1"
                android:text="shijian"
                android:textColor="#000"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
